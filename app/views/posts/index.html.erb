<% content_for :container do %>
  <h1>Posts</h1>

  <p>
    <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
  </p>

  <table class="table">
    <thead>
      <tr>
        <th>Subject</th>
        <th>Text</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.subject %></td>
          <td><%= post.text %></td>
          <td><%= image_tag(post.image, width: 100) %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

<% end %>
